<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dip">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total calori of this week"
        android:id="@+id/textView3"
        android:layout_marginTop="36dp"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/totdistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#874423"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/textView3"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="average calori of this week"
        android:id="@+id/textView4"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/totdistance"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/avgdistance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView4"
        android:textStyle="bold"
        android:textColor="#874423"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp" />

    <TextView
        android:id="@+id/mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#432387"
        android:text="Wish you a good day!"
        android:layout_below="@+id/avgdistance"
        android:layout_alignParentStart="true"
        android:textSize="35dp"
        android:layout_marginTop="46dp" />

    <proj2.mobile.melbourne.elderfitness.widget.FButton
        android:id="@+id/ButtonRun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I want to run"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/ButtonVir"
        android:layout_alignParentStart="true" />

    <proj2.mobile.melbourne.elderfitness.widget.FButton
        android:id="@+id/ButtonVir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I want to check data"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp" />

</RelativeLayout>
